<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="0.5dp"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:id="@+id/rl_noti"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/tv_count"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:text="dd"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:background="@drawable/rounded_edge2"
            android:padding="1dp"
            android:textColor="@color/colorPrimary"
            android:textSize="12dp"
            android:textStyle="bold"
            android:visibility="gone"
            />
        <androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
                    <androidx.cardview.widget.CardView
                    android:id="@+id/card_view"
                    android:layout_width="wrap_content"
                    android:layout_height="115dp"
                    android:layout_margin="15dp"
                    android:layout_alignParentLeft="true"
                    >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center_vertical"
                        >


                        <androidx.appcompat.widget.AppCompatImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/courImage"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:adjustViewBounds="true"
                            android:layout_marginBottom="2dp"
                            android:src="@mipmap/ic_launcher"
                            />

                        <TextView
                            android:id="@+id/courName"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_below="@id/courImage"
                            android:fontFamily="@string/font_family_light"
                            android:text="Java"
                            android:gravity="center"
                            android:textSize="12dp"
                            android:textStyle="bold"
                            android:textColor="@color/color_text_black"
                            android:layout_marginBottom="10dp"/>

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>
        </androidx.appcompat.widget.LinearLayoutCompat>

    </RelativeLayout>
</androidx.appcompat.widget.LinearLayoutCompat>